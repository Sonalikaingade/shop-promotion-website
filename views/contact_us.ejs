<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <section id="header">
      <a href="#"><img src="/img/logo.png" class="logo" alt="" /></a>
      <div>
        <ul id="navbar">
          <li><a href="/">Home</a></li>
          <li><a href="/Gallery">Gallery</a></li>
          <li><a class="active" href="/contact_us">Contact us</a></li>
          <li><a href="/login">Admin</a></li>
        </ul>
      </div>
    </section>

    <section class="contact_us_form">
      <!-- <div class="alert-success">
      <span>Message sent! Thank you for Contacting us.</span>
      </div>

      <div class="alert-error">
        <span>Something went wrong! please try again.</span>
      </div> -->

      <div class="contact-section">
        <div class="contact-info">
          <div><i class="fas fa-map-marker-alt"></i>Address,City,Country</div>
          <div><i class="fas fa-envelope"></i>contact@gmail.com</div>
          <div><i class="fas fa-phone"></i>+00 0000 000 000</div>
          <div><i class="fas fa-clock"></i>Mon - Fri 8:00 AM to 5:00 PM</div>
        </div>
        <div class="contact-form">
          <h2>Contact Us</h2>
          <form class="contact" action="/contact_us" method="post">
            <input
              type="text"
              name="name"
              class="text-box"
              placeholder="Your Name"
              required
            />
            <input
              type="email"
              name="email"
              class="text-box"
              placeholder="Your Email"
              required
            />
            <textarea
              name="message"
              rows="5"
              placeholder="Your Message"
              required
            ></textarea>
            <input type="submit" name="submit" class="send-btn" value="Send" />
          </form>
        </div>
      </div>
    </section>
  </body>
</html>
